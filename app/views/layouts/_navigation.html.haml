-# navigation styled for Zurb Foundation 5
%nav.top-bar
  .top-bar-section
    %ul{class: "menu align-right"}
      = render 'layouts/navigation_links'
  .top-bar-right
    %ul{class: "dropdown menu", title: current_user.name, data: {dropdown: {menu: true}}}
      %li
        %a{href: '#', class: "secondary button"}
          =current_user.name
        %ul.menu
          %li
            %a{href: "/settings", class: "secondary button"}
              ="Settings"
          %li
            =link_to 'Log Out', logout_path, method: :delete, class: "secondary button"
          - if current_user.admin
            %li
            =link_to 'Users', users_path, class: "secondary button"

  
